
.verify-left{
	width: calc(100% - 260rpx);
}
.verify-right{
	padding-left: 20rpx;
}
.verify-btn{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	width: 240rpx;
	border-radius: 8rpx;
	background: -webkit-linear-gradient(left,#0081ff,#0081ff);
	background: linear-gradient(left,#0081ff,#0081ff);
}
.verify-left,.verify-right{
	float: left;
}
.landing{
	height: 84rpx;
	line-height: 84rpx;
	border-radius: 44rpx;
	font-size: 32rpx;
	background: -webkit-linear-gradient(left,#0081ff,#0081ff);
	background: linear-gradient(left,#0081ff,#0081ff);
}
.forget-btn{
	padding: 10rpx 20rpx;
	margin-top: 380rpx;
}
.forget-input input{
	background: #F2F5F6;
	font-size: 28rpx;
	padding: 10rpx 25rpx;
	height: 80rpx;
	line-height: 62rpx;
	border-radius: 8rpx;
}
.forget-margin-b{
	margin-bottom: 25rpx;
}
.forget-input{
	padding: 10rpx 20rpx;
	overflow: auto;
}
.forget-card{
	background: #fff;
	border-radius: 12rpx;
	padding: 10rpx 25rpx;
	box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.12);
	position: relative;
	margin-top: 320rpx;
}
.forget-bg {
	height: 560rpx;
	padding: 25rpx;
	background: -webkit-linear-gradient(#282C35,#ABB2B6);
	background: linear-gradient(#282C35,#ABB2B6);
}
.forget-head{
	font-size: 34rpx;
	text-align: center;
	padding: 25rpx 10rpx 55rpx 10rpx;
}

